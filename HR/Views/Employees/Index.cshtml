@model IEnumerable<HR.Models.Viewmodels.EmployeeList>

@{
    ViewData["Title"] = "Index";
}

<h1>Index</h1>

<p>
    <a asp-action="Create">Create New</a>
</p>
<table class="table">
    <thead>
        <tr>
            <th>
                @Html.DisplayNameFor(model => model.EmpId)
            </th>
            <th>
                @Html.DisplayNameFor(model => model.EmpName)
            </th>
            <th>
                @Html.DisplayNameFor(model => model.EmpSurname)
            </th>   
            <th>
                @Html.DisplayNameFor(model => model.EmpJobName)
            </th> 
            <th></th>
        </tr>
    </thead>
    <tbody>
@foreach (var item in Model) {
        <tr>
            <td>
                @Html.DisplayFor(modelItem => item.EmpId)
            </td>
            <td>
                @Html.DisplayFor(modelItem => item.EmpName)
            </td>
            <td>
                @Html.DisplayFor(modelItem => item.EmpSurname)
            </td>
            <td>
                @Html.DisplayFor(modelItem => item.EmpJobName)
            </td> 
            <td>
                <a asp-action="Details" asp-route-id="@item.EmpId" class="btn btn-success">Details</a> |
                <a asp-action="Edit" asp-route-id="@item.EmpId" class="btn btn-warning">Edit</a> |
                <a asp-action="Delete" asp-route-id="@item.EmpId" class="btn btn-danger">Delete</a>
            </td>
        </tr>
}
    </tbody>
</table>
